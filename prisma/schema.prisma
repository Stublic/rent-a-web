// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

model User {
  id               String   @id @default(cuid())
  email            String   @unique
  name             String?
  emailVerified    Boolean
  image            String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  // Custom fields for Rent a Web
  subscriptionStatus String?  // active, canceled, etc.
  stripeCustomerId   String?  @unique
  planName           String?  // Starter, Advanced, Web Shop Start
  phoneNumber        String?
  role               String   @default("USER")  // USER, ADMIN
  lastDripEmailSent  Int      @default(0)       // Track drip campaign step (0, 3, 7, 14)

  sessions         Session[]
  accounts         Account[]
  projects         Project[]
  invoices         Invoice[]
  media            Media[]

  @@map("user")
}

model Project {
  id                   String   @id @default(cuid())
  name                 String
  domain               String?
  subdomain            String?  @unique   // e.g. "moj-projekt" â†’ moj-projekt.webica.hr
  customDomain         String?  @unique   // e.g. "mojadomela.hr"
  publishedAt          DateTime?          // When the site was published
  status               String   @default("DRAFT") // DRAFT, SUBMITTED, GENERATED, PUBLISHED, LIVE
  planName             String
  stripeSubscriptionId String?  @unique
  userId               String
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Content Generation Fields
  contentData          Json?    // Stores raw form data
  generatedHtml        String?  @db.Text // Large text field for AI output
  aiVersion            Int      @default(1)
  hasGenerated         Boolean  @default(false) // Track if website has been generated
  
  // Editor Fields
  editHistory          Json[]   @default([])  // Array of edit events for undo
  lastEditedAt         DateTime?
  
  // Editor Token System
  editorTokens         Int      @default(500)  // Remaining tokens for AI edits (500 initial)
  editorTokensUsed     Int      @default(0)    // Total tokens consumed

  // Blog
  blogPosts            BlogPost[]
  blogCategories       BlogCategory[]
  contactSubmissions   ContactSubmission[]
  blogPostsUsedThisMonth Int    @default(0)    // Monthly AI blog generation counter
  blogPostsResetAt     DateTime?               // When the monthly counter was last reset

  // Cancellation / Grace Period
  cancelledAt          DateTime?
  deletionReminders    String   @default("") // Comma-separated reminder days sent, e.g. "30,60,83"

  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@map("project")
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verification")
}

model StripeSubscription {
  id               String   @id @default(cuid())
  email            String   @unique
  stripeCustomerId String   @unique
  planName         String
  status           String   @default("active")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("stripe_subscription")
}
model Invoice {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId        String?
  invoiceNumber    String   @unique
  amount           Float
  description      String
  pdfUrl           String?
  stripeSessionId  String?  @unique
  type             String   // SUBSCRIPTION, TOKEN_PURCHASE
  status           String   @default("PAID") // PAID, PENDING, FAILED
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("invoice")
}

model Media {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId String?
  filename  String
  url       String
  size      Int
  type      String   // image/png, video/mp4, application/pdf, etc.
  createdAt DateTime @default(now())

  @@map("media")
}

model BlogPost {
  id              String        @id @default(cuid())
  projectId       String
  project         Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  title           String
  slug            String
  excerpt         String?
  content         String        @db.Text
  coverImage      String?
  categoryId      String?
  category        BlogCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  tags            String?       @db.Text  // Comma-separated tags
  status          String        @default("DRAFT") // DRAFT, PUBLISHED
  publishedAt     DateTime?
  metaTitle       String?
  metaDescription String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@unique([projectId, slug])
  @@map("blog_post")
}

model BlogCategory {
  id        String     @id @default(cuid())
  projectId String
  project   Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  name      String
  slug      String
  posts     BlogPost[]
  createdAt DateTime   @default(now())

  @@unique([projectId, slug])
  @@map("blog_category")
}

model ContactSubmission {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  name      String
  email     String
  phone     String?
  message   String   @db.Text
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("contact_submission")
}
